<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS}{PST} - %-5p - [requestId = %X{X-Request-ID}] - %c{1}.%M Line(%L) - %m%n</Property>
    </Properties>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        <File name="CdcamLogFile" fileName="./logs/cdcam.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>
    </Appenders>
    <logs>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="CdcamLogFile"/>
        </Root>
    </logs>
</Configuration>
